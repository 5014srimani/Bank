import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Snippet {
	public static void main(String[] args) {
		
		Account acc = new Account();
		Saving sa = new Saving();
		Current cu = new Current();
		Scanner input = new Scanner(System.in);
		int accType = 0; 
		int choice = 0;
		List<Object> addItem = new ArrayList<>();
			
		while(choice != 2) {
		
			System.out.print("Customer Name: ");
			acc.name = input.nextLine();
			System.out.print("Account Number: ");
			acc.accNo = input.nextLine();
			System.out.print("Account Type (1 = Saving Account, 2 = Current Account) : ");
			accType = input.nextInt();
			
			if(accType == 1) {
			System.out.print("Account Balance: ");
			sa.balance = input.nextDouble();
			
			System.out.print("\n");
			System.out.println("Customer Nameeeee: "+acc.name);
			System.out.println("Account Number: "+acc.accNo);
			System.out.println("Account Type (S = Saving Account, C = Current Account) : "+accType);
			System.out.println("Account Balance: "+sa.CalCurrentBalance());
			}
			
			if(accType == 2) {
			System.out.print("Account Balance: ");
			cu.balance = input.nextDouble();

			System.out.print("\n");
			System.out.println("Customer Name: "+acc.name);
			System.out.println("Account Number: "+acc.accNo);
			System.out.println("Account Type (S = Saving Account, C = Current Account) : "+accType);
			System.out.println("Account Balance: "+cu.CalCurrentBalance());
			}
			
			else {
				System.out.println("Wrong choice...Try again");
			}
			
			System.out.print("\n");
			System.out.println("Next Customer(1 = yes , 2 = No) : ");
			choice = input.nextInt();
			
			if(choice==2) {
				System.out.print("Thank you!");
			}
		}
		
		addItem.add(sa.CalCurrentBalance());
		addItem.add(cu.CalCurrentBalance());
		
		for(int i=0; i<addItem.size(); i++) {
			System.out.println(addItem.size());
		}
			
	}
}


