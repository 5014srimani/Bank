
public class Saving extends Account {

	Saving(){}
	
	
	public  double CalCurrentBalance() {
		
		double minBal = 500;
		
		if(minBal > balance) {
			return currentBal = balance - 10; 
			
		}else{
			 
			currentBal =(balance * (0.04))+ balance;
			 return  currentBal;
		}	
	}
	
